<div id="modalEditStockEntry" class="modal-wrapper">
    <div class="modal-overlay"></div>
    <div class="modal-panel">
        <div class="modal-header">
            <h3>Thêm Lô Hàng</h3>
            <button class="modal-close"><i class="bi bi-x-lg"></i></button>
        </div>
        <hr>
        <div class="modal-body">
            <form id="formEditStockEntry">
                <input type="hidden" id="editStockEntryId" name="id" />
                <input type="hidden" id="editProductId" name="productId" />

                <div class="form-group">
                    <label for="batchCode">Mã lô hàng <span class="error">*</span></label>
                    <input type="text" id="editBatchCode" name="batchCode" required />
                </div>


                <div class="form-group">
                    <label for="variantCombinationSelect">Chọn biến thể</label>
                    <select id="editVariantCombinationSelect" name="variantCombinationId">
                        <option value="">-- Không chọn --</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="importPrice">Giá nhập (VNĐ) <span class="error">*</span></label>
                    <input type="number" id="editImportPrice" name="importPrice" min="0" required />
                </div>

                <div class="form-group">
                    <label for="quantity">Số lượng nhập <span class="error">*</span></label>
                    <input type="number" id="editQuantity" name="quantity" min="1" required />
                </div>

                <div class="form-group">
                    <label for="note">Ghi chú</label>
                    <textarea id="editNote" name="note" rows="3"
                        placeholder="Ví dụ: Nhập từ xưởng A, hàng loại 1..."></textarea>
                </div>

                <hr>

                <div class="form-actions">
                    <button type="submit" class="btn-primary">Lưu</button>
                    <button type="button" class="btn-secondary modal-close">Huỷ</button>
                </div>
            </form>
        </div>
    </div>
</div>